footer 
  .container-fluid.footer__container 
    .container
      .row
        each item in footerBar
          if item.option
            div(class="col-xs-12 col-sm-6 col-md-4 col-lg-4")
              i(class="fas fa-th-large icon-title")
              h4.title= item.name
              ul
                each itemList in item.list
                  if itemList.icon
                    li
                      i(class=itemList.icon)
                      p.ml-3= itemList.des
                  else
                    li
                      p= itemList.des
          else
            div(class="col-xs-12 col-sm-6 col-md-2 col-lg-2")
              i(class="fas fa-th-large icon-title")
              h4.title= item.name
              ul
                each itemList in item.list
                  if itemList.icon
                    li
                      i(class=itemList.icon)
                      p.ml-3= itemList.des
                  else
                    li
                      p= itemList.des

      hr
      .row.footer__payment  
        div(class="col-xs-12 col-sm-12 col-md-6 col-lg-6 payment")
          h5 Thanh toán:
          .row 
            each urlImg in banks
              div(class="col-xs-6 col-sm-3 col-md-3 col-lg-3")
                img(src=urlImg, alt="")
        div(class="col-xs-12 col-sm-12 col-md-6 col-lg-6 answers")
          h5 Giải đáp nhanh:
          .row
            div(class="col-xs-12 col-sm-6 col-md-6 col-lg-6 answers__container")
              .answers__icon 
                i(class="fas fa-phone-alt")
              .answers__content 
                p Tư vấn miễn phí (24/7)
                h4 1900 650 650
            div(class="col-xs-12 col-sm-6 col-md-6 col-lg-6 answers__container")
              .answers__icon
                i(class="fas fa-comments")
              .answers__content 
                p Góp ý - phản hồi - thắc mắc
                h4 1900 650 650
  .container-fluid.footer__container-bar
    .container
      .left-container
        p Bản quyền thuộc về <strong>Design Team</strong>. Phát triển bởi <strong>Bizweb</strong>.
      .right-container
        ul  
          each item in menuBar
            li 
              a(href=item.href)= item.name 